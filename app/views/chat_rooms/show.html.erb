<div class="container chat_room">
<h1><%= @chat_room.title %></h1>

  <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
    <%= render @chat_room.messages %>
  </div>

  <%= form_for @message, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :body, 'Сообщение' %>
      <%= f.text_area :body, class: 'form-control' %>
      <small class="text-muted">Сообщение должно быть более 2-х символов</small>
    </div>

    <%= f.submit "Отправить", class: 'btn btn-primary btn-lg' %>

</div>
 <% end %>
